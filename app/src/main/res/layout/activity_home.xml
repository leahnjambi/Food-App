<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:paddingBottom="16dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txtVwHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVwHm"
        android:layout_width="206dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txtVwHome"
        app:layout_constraintStart_toStartOf="@+id/txtVwHome"
        app:layout_constraintTop_toBottomOf="@+id/txtVwHome"
        app:srcCompat="@drawable/pizza" />

    <LinearLayout
        android:id="@+id/costLin"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/imgVwHm"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="@+id/imgVwHm"
        app:layout_constraintTop_toBottomOf="@+id/imgVwHm">

        <TextView
            android:id="@+id/txtVwHm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Ksh"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVwHm3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.0"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>